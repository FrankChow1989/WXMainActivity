<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:background="#E23A39"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_senior_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="12dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:text="设置"
            android:textColor="@android:color/white"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#EBEBEB"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/id_nokick"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_bg_selector"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/speed_icon_vip"
                    android:paddingLeft="10dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="VIP高级功能"
                    android:textColor="#333333"/>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#ededed"
                />

            <LinearLayout
                android:id="@+id/id_senior_openservice"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_bg_selector"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="超级抢红包助手"
                    android:textColor="#333333"/>

                <ToggleButton
                    android:id="@+id/accessibility_open_tbutton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="4"
                    android:background="@drawable/toggle_btn"
                    android:gravity="center"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ededed"
                />

            <LinearLayout
                android:id="@+id/id_senior_chatpage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_bg_selector"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="自动返回聊天页"
                    android:textColor="#333333"/>

                <ToggleButton
                    android:id="@+id/accessibility_chatpage_tbutton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="4"
                    android:background="@drawable/toggle_btn"
                    android:gravity="center"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ededed"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#ededed"
                />

            <LinearLayout
                android:id="@+id/id_senior_voice"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="声音提示"
                    android:textColor="#333333"/>

                <ToggleButton
                    android:id="@+id/accessibility_voicenotice_tbutton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="4"
                    android:background="@drawable/toggle_btn"
                    android:gravity="center"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ededed"
                />

            <LinearLayout
                android:id="@+id/id_senior_sreenlight"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="屏幕常亮"
                    android:textColor="#333333"/>

                <ToggleButton
                    android:id="@+id/accessibility_sceen_tbutton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="4"
                    android:background="@drawable/toggle_btn"
                    android:gravity="center"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ededed"
                />


            <LinearLayout
                android:id="@+id/id_senior_lock"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="锁屏抢红包"
                    android:textColor="#333333"/>

                <ToggleButton
                    android:id="@+id/ly_open_lock"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="4"
                    android:background="@drawable/toggle_btn"
                    android:gravity="center"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ededed"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#ededed"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.8">
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ededed"
            />

        <LinearLayout
            android:id="@+id/id_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="检查更新"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/id_v_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="版本:V8.03"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>